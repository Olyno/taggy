{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["esnext"],
		"rootDirs": ["./src", "../../configs"],
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"sourceMap": true,
		"paths": {
			"$configs/*": ["../../configs/*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
