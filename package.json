{
	"name": "taggy",
	"version": "1.0.0",
	"types": "module",
	"scripts": {
		"start": "pnpm --parallel -r start",
		"start:bot": "pnpm --filter @taggy/bot start",
		"start:web": "pnpm --filter @taggy/web start",
		"start:websocket": "pnpm --filter @taggy/websocket start",
		"dev": "pnpm --parallel -r dev",
		"dev:bot": "pnpm --filter @taggy/bot dev",
		"dev:web": "pnpm --filter @taggy/web dev",
		"dev:websocket": "pnpm --filter @taggy/websocket dev",
		"format": "pnpm --parallel -r format",
		"format:bot": "pnpm --filter @taggy/bot format",
		"format:web": "pnpm --filter @taggy/web format",
		"format:websocket": "pnpm --filter @taggy/websocket format"
	},
	"devDependencies": {
		"@types/debug": "^4.1.7",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"prisma": "^3.14.0",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^3.14.0",
		"debug": "^4.3.4",
		"dotenv": "^16.0.1",
		"envsafe": "^2.0.3"
	}
}
